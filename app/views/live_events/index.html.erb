<div class="container">
  <div class="header">
    <h1>🎵 TuneBox - ライブ情報検索</h1>
    <p>日本全国のライブ・コンサート情報をチェック！</p>

    <div class="auth-nav">
      <% if logged_in? %>
        <span class="welcome">ようこそ、<%= current_user.name %>さん！</span>
        <%= link_to "マイページ", user_path(current_user), class: "btn btn-secondary" %>
        <%= link_to "ログアウト", logout_path, class: "btn btn-secondary" %>
      <% else %>
        <%= link_to "新規登録", signup_path, class: "btn btn-signup" %>
        <%= link_to "ログイン", login_path, class: "btn btn-login" %>
      <% end %>
    </div>
  </div>

  <div class="search-section">
    <%= form_with url: live_events_path, method: :get, local: true, class: "search-form" do |form| %>
      <div class="search-row">
        <div class="search-field">
          <%= form.text_field :search,
              value: params[:search],
              placeholder: "アーティスト名、ライブタイトル、会場名で検索...",
              class: "search-input" %>
        </div>

        <div class="search-field">
          <%= form.select :prefecture,
              options_for_select([
                ['全ての都道府県', ''],
                ['東京都', '東京都'], ['大阪府', '大阪府'], ['神奈川県', '神奈川県'],
                ['愛知県', '愛知県'], ['福岡県', '福岡県'], ['北海道', '北海道'],
                ['宮城県', '宮城県'], ['埼玉県', '埼玉県'], ['千葉県', '千葉県'],
                ['兵庫県', '兵庫県'], ['京都府', '京都府'], ['広島県', '広島県']
              ], params[:prefecture]),
              {},
              { class: "search-select" } %>
        </div>

        <div class="search-buttons">
          <%= form.submit "🔍 検索", class: "btn btn-search" %>
          <%= link_to "クリア", live_events_path, class: "btn btn-clear" %>
        </div>
      </div>

      <div class="date-search-row">
        <div class="date-field">
          <%= form.label :date_from, "開催日:", class: "date-label" %>
          <%= form.date_field :date_from, value: params[:date_from], class: "date-input" %>
          <span class="date-separator">〜</span>
          <%= form.date_field :date_to, value: params[:date_to], class: "date-input" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= link_to "新しいライブを追加", new_live_event_path, class: "btn btn-primary" %>
  </div>

  <div class="live-events">
    <% if @live_events.any? %>
      <% @live_events.each do |live_event| %>
        <div class="live-event-card">
          <div class="event-header">
            <h3><%= link_to live_event.title, live_event_path(live_event) %></h3>
            <span class="prefecture"><%= live_event.prefecture %></span>
          </div>

          <div class="event-details">
            <p class="artist">🎤 <strong><%= live_event.artist %></strong></p>
            <p class="venue">📍 <%= live_event.venue %></p>
            <p class="date">📅 <%= live_event.date.strftime("%Y年%m月%d日 %H:%M") if live_event.date %></p>
            <% if live_event.price %>
              <p class="price">💴 ¥<%= number_with_delimiter(live_event.price) %></p>
            <% end %>
          </div>

          <% if live_event.description.present? %>
            <p class="description"><%= truncate(live_event.description, length: 100) %></p>
          <% end %>

          <div class="event-actions">
            <%= link_to "詳細を見る", live_event_path(live_event), class: "btn btn-outline" %>
            <% if live_event.ticket_url.present? %>
              <%= link_to "チケット購入", live_event.ticket_url, target: "_blank", class: "btn btn-ticket" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <h3>まだライブ情報がありません</h3>
        <p>最初のライブ情報を追加してみましょう！</p>
        <%= link_to "ライブを追加する", new_live_event_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

